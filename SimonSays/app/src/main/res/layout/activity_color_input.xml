<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.esrlabs.simonsays.ColorInputActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:weightSum="1" >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_red" android:layout_gravity="bottom" android:layout_weight="0.36"
                android:background="@android:color/holo_red_dark" android:text=" "/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_blue" android:layout_gravity="bottom" android:layout_weight="0.30"
                android:background="@android:color/holo_blue_dark" android:text=" "/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_green" android:layout_gravity="bottom" android:layout_weight="0.32"
                android:background="@android:color/holo_green_dark" android:text=" "/>
    </LinearLayout>
</RelativeLayout>
